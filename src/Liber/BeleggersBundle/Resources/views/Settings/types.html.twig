{% extends "LiberBeleggersBundle::layout.html.twig" %}
{% use 'LiberBeleggersBundle::Settings/tabs.html.twig' %}
{% use 'LiberBeleggersBundle::helpbar.html.twig' %}

{% block title %}
    {{ 'titles.settings.types'|trans }} - {{ 'titles.settings.general'|trans }}
{% endblock %}

{% form_theme form 'LiberBeleggersBundle::form_tablerow_layout.html.twig' %}

{% block content %}
    <div id="jPageType" class="hidden">type</div>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-error">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <form action="" method="post" {{ form_enctype(form) }}>
        {{ form_start(form) }}

        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <td>{{ 'table.header.name'|trans }}</td>
                <td>{{ 'table.stockType.header.timeToMinimum'|trans }} {{ 'table.stockType.general.minutes'|trans }}</td>
                <td>{{ 'table.stockType.header.magicToMaximum'|trans }}</td>
            </tr>
            </thead>
            <tbody class="stockCollection" data-prototype="{{ form_widget(form.stockTypes.vars.prototype)|e }}">
            {% for type in form.stockTypes %}
                <tr>
                    {{ form_widget(type) }}
                    <td class="form_control">
                        <a href="#" class="stock_remove_existing" data-toggle="tooltip" title="{{ 'form.control.stockType.removeExisting'|trans }}">
                            <span class="icon-trash"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="clearfix">
            <input class="btn btn-primary" type="submit" value="{{ 'form.button.general.confirm'|trans }}" />
            <a href="#" class="pull-right btn btn-info add_stock_link">{{ 'form.button.stockType.add'|trans }}</a>
            {#<a href="#" class="pull-right btn btn-danger remove_entire_stock" style="margin-right: 15px;">Clear All</a>#}
        </div>

        {{ form_end(form) }}
    </form>

    <script type="text/javascript">
        $(document).ready(function() {
            var stockForm = new Liber.StockForm();
            stockForm.init();
        });
    </script>

{% endblock %}

