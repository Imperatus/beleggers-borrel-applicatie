{% extends 'base.html.twig' %}

{% block head %}

{% endblock %}

{% block title 'SpiritStock' %}

{% block body %}

    <div class="row-fluid">
        <div class="span12">
            <div class="navbar">
                <div class="navbar-inner">
                    <a class="brand" href="{{ path('liber_beleggers_dashboard') }}">{{ 'titles.general.appName'|trans }} {{ version }}</a>
                    {% block content_header %}
                        <ul class="nav">
                            <li class="active"><a href="{{ path('liber_beleggers_settings') }}">{{ 'menu.settings'|trans }}</a></li>
                            <li><a href="{{ path('liber_beleggers_cashier_register' ) }}">{{ 'menu.cashier'|trans }}</a></li>
                            <li><a href="{{ path('liber_beleggers_history_test') }}">{{ 'menu.history'|trans }}</a></li>
                        </ul>
                    {% endblock %}
                    {% include 'LiberUserBundle::Components/language_selector.html.twig' %}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        {% block spanOverride
        '<div class="span9">' %}
            <div class="well">
                {% block navtabs %}{% endblock %}

                {% block content %}{% endblock %}
            </div>
        </div>
        {% block helpbar %}{% endblock %}
    </div>

{% endblock %}
