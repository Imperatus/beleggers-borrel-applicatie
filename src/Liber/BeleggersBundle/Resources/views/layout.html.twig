{% extends 'base.html.twig' %}

{% block head %}

{% endblock %}

{% block title 'SpiritStock' %}

{% block body %}
    {% block content_header %}
        <div class="row-fluid">
            <div class="span12">
                <div class="navbar">
                    <div class="navbar-inner">
                        <a class="brand" href="#">SpiritStock v0.3a</a>
                        <ul class="nav">
                            <li class="active"><a href="{{ path('liber_beleggers_settings') }}">{{ 'menu.settings'|trans }}</a></li>
                            <li><a href="{{ path('liber_beleggers_cashier_register' ) }}">{{ 'menu.cashier'|trans }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    <div class="row-fluid">
        <div class="span9">
            <div class="well">
                <ul class="nav nav-tabs">
                    <li id="tabOverview"><a href="{{ path('liber_beleggers_settings_overview') }}">{{ "tabs.overview"|trans }}</a></li>
                    <li id="tabStock"><a href="{{ path('liber_beleggers_settings_stock') }}">{{ "tabs.stock"|trans }}</a></li>
                    <li id="tabTypes"><a href="{{ path('liber_beleggers_settings_types') }}">{{ "tabs.types"|trans }}</a></li>
                    <li id="tabGlobal"><a href="{{ path('liber_beleggers_settings_global') }}">{{ "tabs.global"|trans }}</a></li>
                </ul>
                 {% block content %}{% endblock %}
            </div>
        </div>
        <div class="span3">
            <div class="well">
                {% block helpbar %}{% endblock %}
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            var tabControl = new Liber.Tabs();
            tabControl.setActiveTab("{{ activeTab }}");
        });
    </script>
{% endblock %}
