{% extends 'base.html.twig' %}

{% block head %}

{% endblock %}

{% block title 'SpiritStock' %}

{% block body %}

    <div class="row-fluid">
        <div class="span12">
            <div class="navbar">
                <div class="navbar-inner">
                    {% block brand %}<a class="brand" href="{{ path('spiritstock_stock_dashboard') }}">{{ 'titles.general.appName'|trans }} {{ version }}</a>{% endblock %}
                    {% block content_header %}
                        <ul class="nav">
                            <li class="active"><a href="{{ path('spiritstock_stock_settings') }}">{{ 'menu.settings'|trans }}</a></li>
                            <li><a href="{{ path('spiritstock_stock_cashier_register' ) }}">{{ 'menu.cashier'|trans }}</a></li>
                            <li><a href="{{ path('spiritstock_stock_history_test') }}">{{ 'menu.history'|trans }}</a></li>
                        </ul>
                    {% endblock %}
                    <div class="clearfix">
                        <div class="pull-right" style="margin-left: 16px; margin-top:  10px;">
                            <a href="{{ path('fos_user_security_logout') }}" >{{ 'fos.link.logout'|trans }}: {{ app.user.username }}</a>
                        </div>
                        {% include 'SpiritStockUserBundle::Components/language_selector.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        {% block spanOverride
        '<div class="span9">' %}
            <div class="well">
                {% block navtabs %}{% endblock %}

                {% block content %}{% endblock %}
            </div>
        </div>
        {% block helpbar %}{% endblock %}
    </div>

{% endblock %}
