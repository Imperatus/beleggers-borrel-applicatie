<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{% endblock %} - {{ 'titles.general.appName'|trans }} {{ version }}</title>
        {% stylesheets
            '../app/Resources/public/bootstrap/css/*'
            '../app/Resources/public/spiritstock/css/*'
        %}
        <link rel="stylesheet" href="{{ asset_url }}">
        <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.0/themes/overcast/jquery-ui.css" type="text/css" rel="stylesheet" />

        {% endstylesheets %}
        <script type="text/javascript" src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>

        {# Set Locale correctly for JS Translations #}
        {% if testLocale is defined %}
            <script type="text/javascript" src="{{ url('bazinga_jstranslation_js', {'_locale': testLocale}) }}"></script>
        {% else %}
            <script type="text/javascript" src="{{ url('bazinga_jstranslation_js') }}"></script>
        {% endif %}

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="http://code.jquery.com/ui/1.10.0/jquery-ui.js" type="text/javascript"></script>

        <script src="{{ asset('bundles/obhighcharts/js/highcharts/highcharts.js') }}"></script>
        <script src="{{ asset('bundles/obhighcharts/js/highcharts/modules/exporting.js') }}"></script>

        {% javascripts
            "../app/Resources/public/bootstrap/js/bootstrap.js"
            "../app/Resources/public/jmarquee/*"
            "../src/SpiritStock/StockBundle/Resources/public/js/*"
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

    </head>
    <body>
        <div id="mainContainer">
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}

            <div id="push"></div>
        </div>

        <div id="footer">
            <div class="container"><a href="https://www.linkedin.com/pub/jurgen-vincent-buisman/17/b49/316" target="_blank">Jurgen Vincent Buisman</a> - &copy; 2013 - {{ "now"|date('Y') }}</div>
        </div>
    </body>
</html>